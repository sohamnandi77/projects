{
  "extends": "@projects/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "plugins": [{ "name": "next" }],
    "module": "esnext"
  },
  "include": [
    "src/**/*",
    ".storybook/**/*",
    "stories/**/*",
    "components/**/*",
    "constants/**/*"
  ],
  "exclude": ["node_modules"]
}
