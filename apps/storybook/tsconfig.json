{
  "extends": "@projects/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ESNext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [{ "name": "next" }],
    "module": "esnext"
  },
  "include": ["src/**/*", ".storybook/**/*"],
  "exclude": ["node_modules"]
}
