{
  "name": "storybook",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "storybook build",
    "build:app": "tsc -b && vite build",
    "clean": "git clean -xdf .cache .turbo dist node_modules storybook-static",
    "dev": "storybook dev -p 6006",
    "dev:app": "vite",
    "format": "prettier --check . --ignore-path ../../.prettierignore",
    "format:fix": "prettier --write . --ignore-path ../../.prettierignore",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "serve storybook-static",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@projects/hooks": "workspace:*",
    "@projects/ui": "workspace:*",
    "@react-aria/optimize-locales-plugin": "^1.1.3",
    "lucide-react": "catalog:",
    "react": "catalog:react19",
    "react-dom": "catalog:react19"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@projects/eslint-config": "workspace:*",
    "@projects/prettier-config": "workspace:*",
    "@projects/tailwind-config": "workspace:*",
    "@projects/tsconfig": "workspace:*",
    "@storybook/addon-a11y": "^8.4.7",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "@vitejs/plugin-react": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-tailwindcss": "catalog:",
    "globals": "^15.13.0",
    "storybook": "^8.4.7",
    "storybook-addon-tag-badges": "^1.3.2",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:"
  },
  "prettier": "@projects/prettier-config"
}
